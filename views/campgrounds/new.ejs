<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <div class="card-body">
        <form
          action="/campgrounds"
          method="POST"
          novalidate
          class="validated-form"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="title">Campground Name</label>
            <input
              class="form-control"
              type="text"
              name="campground[title]"
              id="title"
              required
            />
            <div class="valid-feedback">Great Campground Name!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input
              class="form-control"
              type="text"
              name="campground[location]"
              id="location"
              required
            />
            <div class="valid-feedback">I Bet That Location Is Beautiful!</div>
          </div>

          <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group">
              <span class="input-group-text" id="price-label">$</span>
              <input
                name="campground[price]"
                id="price"
                type="text"
                class="form-control"
                placeholder="0.00"
                aria-label="price"
                aria-describedby="price-label"
                required
              />
              <div class="valid-feedback">Not A Bad Price!</div>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              type="text"
              name="campground[description]"
              id="description"
              required
            ></textarea>
            <div class="valid-feedback">Sounds Lovely!</div>
          </div>
          <div class="mb-3">
            <label for="formFileMultiple" class="form-label"
              >Upload Images</label
            >
            <input
              type="file"
              class="form-control"
              id="formFileMultiple"
              name="image"
              multiple
              required
            />
            <div class="invalid-feedback">
              This campground would look much better with a picture.
            </div>
          </div>
          <div class="mb-3">
            <button class="btn btn-success">Add Campground</button>
          </div>
        </form>
        <a class="btn btn-warning" href="/campgrounds">Back To Campgrounds</a>
      </div>
    </div>
  </div>
</div>
